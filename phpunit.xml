<phpunit bootstrap="tests/bootstrap.php"> 
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
    <testsuites>
        <testsuite name="main">
        <file>tests/MySQLiTest.php</file>
        <file>tests/PDO_MySQLTest.php</file>
        <file>tests/Postgres9Test.php</file>
        <file>tests/PDO_PostgresTest.php</file>
    </testsuite>
</testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">.</directory>
            <exclude>
                <directory>pear</directory>
                <directory>perf</directory>
                <directory>tests</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
